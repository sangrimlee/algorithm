{
  "name": "algorithm",
  "description": "프로그래밍 및 알고리즘 문제 풀이 저장소",
  "author": {
    "name": "sangrimlee",
    "email": "contact@sangrim.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sangrimlee/algorithm"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "solution",
    "website"
  ],
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "generate:code": "algorithm --dir solution/src",
    "generate:readme": "markdown -d solution/src -o solution",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@algorithm/cli": "*",
    "@algorithm/eslint-config": "*",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "turbo": "^1.6.3"
  },
  "packageManager": "yarn@1.22.19"
}
